<GameScreen>:
    orientation: "vertical"
    padding: 20
    spacing: 15

    # Hintergrundfarbe f√ºr den Screen
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1   # Wei√ü
        Rectangle:
            pos: self.pos
            size: self.size

    # Titel
    Label:
        text: "üçª Trinkspiel"
        font_size: 36
        size_hint_y: 0.1
        halign: "center"
        valign: "middle"
        color: 0, 0, 0, 1   # Schwarz
        text_size: self.size

    # Eingabefeld f√ºr Spielernamen
    TextInput:
        id: player_input
        hint_text: "Spielernamen durch Komma getrennt eingeben..."
        multiline: False
        size_hint_y: 0.1
        padding: 10
        background_color: 0.95, 0.95, 0.95, 1
        foreground_color: 0, 0, 0, 1

    # Start-Button
    Button:
        text: "üé≤ Spiel starten"
        size_hint_y: 0.1
        background_color: 0.2, 0.6, 0.9, 1   # Blau
        color: 1, 1, 1, 1   # Wei√üe Schrift
        bold: True
        on_press: root.start_game()
        radius: [20,]

    # Scrollbarer Bereich f√ºr Aufgaben
    ScrollView:
        size_hint_y: 0.5
        do_scroll_x: False

        Label:
            id: task_label
            text: "Noch kein Spiel gestartet"
            font_size: 22
            halign: "center"
            valign: "top"
            text_size: self.width, None
            size_hint_y: None
            height: self.texture_size[1]
            padding: 10, 10
            color: 0, 0, 0, 1   # Schwarz f√ºr Kontrast

    # Button f√ºr n√§chste Aufgabe
    Button:
        id: next_button
        text: "‚û°Ô∏è N√§chste Aufgabe"
        size_hint_y: 0.1
        background_color: 0.9, 0.3, 0.3, 1   # Rot
        color: 1, 1, 1, 1   # Wei√üe Schrift
        bold: True
        on_press: root.show_next_task()
        disabled: True
        radius: [20,]
